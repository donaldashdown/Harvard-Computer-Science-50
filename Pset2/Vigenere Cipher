#include <stdio.h>
#include <cs50.h>
#include <string.h>
#include <ctype.h>


int main (int argc, string argv[])

{


printf("what is your messege?\n");
string p = get_string();

string k = (argv[1]);

int m = 0;

if (argc !=2) // || (argv[1]!=isalpha))
    {
        printf("Error, arguement count should be two, key should be letters only");
    }


    for (int i = 0; i < strlen(p); i++)
    {
        if (/*m = 0;*/ m < strlen(k))
            {
               (m++);
            }
                m = m % strlen(k);


            if islower(p[i])
                {
                    printf("%c",(((p[i] + k[m]) - 97) % 26) + 97);
                }

            if isupper(p[i])
                {
                    printf("%c", (((p[i] + k[m]) - 65) %26) +65);
                }
    }
    printf("\n");


return 0;
}
