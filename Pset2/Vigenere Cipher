//Error and exception handelling is in progress.

/*This is a Vigenere cipher.  The encryption uses a keyword, and shifts the messege based on the ascii value,
of the individual characters in the keyword. */

#include <stdio.h>
#include <cs50.h>
#include <string.h>
#include <ctype.h>


int main (int argc, string argv[])

{


printf("what is your messege?\n");


string p = get_string();
string k = (argv[1]);
int m = 0;

if (argc !=2)
    {
        printf("Error, arguement count should be two, and key must consists of letters");
    }

    for(int i = 0; i < strlen(p); i++)
    {

            if islower(p[i])
                {
                    printf("%c",((p[i] - 'a') % 26) + argv[1][m]);
                }

            if isupper(p[i])
                {
                    printf("%c",((p[i] - 'A') % 26) + argv[1][m]);
                }

            if (m < strlen(k))
                {
                    m++;
                }

            if ( m == strlen(k))
                {
                    m = 0;
                }
    }
    printf("\n");


return 0;
}
