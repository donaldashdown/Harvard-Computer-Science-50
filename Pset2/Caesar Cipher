#include <stdio.h>
#include <string.h>
#include <cs50.h>
#include <ctype.h>
int main(int argc, string argv[])

{

    printf("What is your messege?\n");
    string n = get_string();

    if (argc !=2)
    {
        printf("Error,\n");
        printf("You have entered one to many, or two few arguements.\n");
        printf("Please run a maximum of two total arguements. Prgram name, and the key.\n");
        return 1;
    }


    int k = atoi(argv[1]) % 26;

    if ( k == 0)
    {
        printf("invalid input\n");
        printf("you have entered a non positive interger\n");
        return 1;
    }

    printf("ciphertext: ");



        for(int i = 0;  i < strlen(n); i++)
        {

            if (islower(n[i]))
            {
                printf("%c", (((n[i] + k) - 97) % 26) + 97);
            }
            else if (isupper(n[i]))
            {
                printf("%c", (((n[i] + k) - 65) % 26) + 65);
            }
            else

            printf("%c", n[i]);
        }


printf("\n");
return 0;
}
