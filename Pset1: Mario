#include <stdio.h>
#include <cs50.h>

int main(void)


{


    int height = 0;
    {
    do
    {
        printf("Height: ");
         height = get_int();

    }
        while ( ( 0 > height ||  height > 23 ));

    }
        for ( int i = 0; i < height; i++)

        {
            for ( int k = 1; k < height-i; k++)

                {
                    printf(" ");
                }

            for ( int d = 0; d < i+2; d++)

                {
                    printf("#");
                }

            printf("\n");

        }

return 0;
}
